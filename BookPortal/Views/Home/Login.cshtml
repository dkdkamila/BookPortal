@{
    ViewData["Title"] = "Logga in";
}

<h2>Logga in</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="InputEmail">E-postadress</label>
        <input type="email" class="form-control" id="InputEmail" name="InputEmail" placeholder="Ange din e-postadress">
    </div>
    <div class="form-group">
        <label for="InputPassword">Lösenord</label>
        <input type="password" class="form-control" id="InputPassword" name="InputPassword"
            placeholder="Ange ditt lösenord">
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
        <label class="form-check-label" for="RememberMe">Kom ihåg mig</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Logga in</button>
</form>
