@model IEnumerable<Book>

@{
    ViewData["Title"] = "Bläddra bland böcker";
}

<h2>Bläddra bland böcker</h2>

<div>
    <form asp-action="Search" method="get">
        <div class="form-group">
            <input type="text" class="form-control" name="searchString" placeholder="Sök efter böcker">
            <br>
            <button type="submit" class="btn btn-primary">Sök</button>
        </div>
    </form>
</div>
<br>
<h2>Alla böcker:</h2>
<table class="table table-responsive-sm table-hover">
    <thead class="table-primary">
        <tr>
            <th>Titel</th>
            <th>Författare</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info">Läs mer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
